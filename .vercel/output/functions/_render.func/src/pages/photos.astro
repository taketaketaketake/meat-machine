---

<Layout
  title="AI Photo Gallery"
  description={shareDescription}
  shareImage={shareImage}
  class="bg-gray-950"
>
  <HeroSection client:load data={heroData} />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-24 py-16">
    <PhotoGrid client:visible title="Latest Shots" data={latestPhotos} />
    <TrendingTags client:visible title="Trending Tags" data={trendingTags} />
    <CategoryGrid client:visible title="Browse by Category" data={categories} />
    <ToolGrid client:visible title="Explore by AI Tool" data={aiTools} />
    <CommunitySpotlight client:visible data={communitySpotlight} />
    <CreatorList client:visible title="More Featured Creators" data={creators} />
    <TopVotedMasonry client:visible title="Top Voted This Week" data={topVotedPhotos} />
  </div>
</Layout>

<style>

.tag-chip {
  display: inline-block;
  padding: 0.5rem 1rem;
  background-color: rgba(31, 41, 55, 0.5);
  border: 1px solid #4b5563;
  border-radius: 9999px;
  color: #d1d5db;
  font-weight: 500;
  transition: all 0.2s;
  text-decoration: none;
}

.tag-chip:hover {
  background-color: #ec4899;
  color: white;
  border-color: #ec4899;
  transform: translateY(-2px);
}

</style>