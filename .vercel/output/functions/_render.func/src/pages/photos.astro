const aiTools = [
  { name: 'Midjourney', icon: '🎨', gradient: 'from-indigo-500/30 to-purple-500/30' },
  { name: 'DALL-E 3', icon: '✨', gradient: 'from-sky-500/30 to-blue-500/30' },
  { name: 'Stable Diffusion', icon: '🌀', gradient: 'from-rose-500/30 to-red-500/30' },
