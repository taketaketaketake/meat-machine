---
// src/pages/discussions/[channel].astro
import Layout from '../../components/astro/layout.astro';
import '../../styles/global.css';

// --- Mock Data ---
const channels = [
  { id: 'tool-talk', name: 'Tool-Talk', description: 'Discuss specific AI models like Midjourney, Suno, etc.', icon: 'üõ†Ô∏è' },
  { id: 'prompt-craft', name: 'Prompt-Craft', description: 'Share and refine prompting techniques.', icon: '‚úçÔ∏è' },
  { id: 'critique-corner', name: 'Critique-Corner', description: 'Ask for and receive constructive feedback.', icon: 'üñºÔ∏è' },
  { id: 'ai-news', name: 'AI-News', description: 'Hot links and updates from the world of AI.', icon: 'üì∞' },
  { id: 'announcements', name: 'Announcements', description: 'Platform news and updates from the Meat team.', icon: 'üì¢' },
];

const allThreads = [
  { id: 1, title: 'Has anyone mastered the "--style raw" parameter in Midjourney v6?', author: { name: 'AURA', avatarEmoji: '‚ú®' }, channelId: 'tool-talk', replies: 18, likes: 122, timestamp: '3 hours ago' },
  { id: 2, title: 'Requesting Feedback: Is this synthwave piece too busy?', author: { name: 'Synthwave_Sound', avatarEmoji: 'üéß' }, channelId: 'critique-corner', replies: 5, likes: 45, timestamp: '8 hours ago' },
  { id: 3, title: 'My go-to prompt structure for creating consistent characters', author: { name: 'Code_Poet', avatarEmoji: '‚úçÔ∏è' }, channelId: 'prompt-craft', replies: 42, likes: 256, timestamp: '1 day ago' },
  { id: 4, title: 'New Feature Announcement: Collections are now live!', author: { name: 'Meat Team', avatarEmoji: 'ü•©' }, channelId: 'announcements', replies: 112, likes: 840, timestamp: '2 days ago' },
  { id: 5, title: 'How to get more cinematic lighting from Sora?', author: { name: 'VideoMage_99', avatarEmoji: 'üßô' }, channelId: 'tool-talk', replies: 25, likes: 180, timestamp: '3 days ago' },
  { id: 6, title: 'Anthropic releases Claude 3.5 Sonnet, claims it outperforms GPT-4o', author: { name: 'TechObserver', avatarEmoji: 'üì°' }, channelId: 'ai-news', replies: 76, likes: 412, timestamp: 'Just now' },
];

// --- Dynamic Page Logic ---

export function getStaticPaths() {
  return channels.map(channel => ({
    params: { channel: channel.id },
  }));
}

const { channel: currentChannelId } = Astro.params;
const currentChannel = channels.find(c => c.id === currentChannelId);
const filteredThreads = allThreads.filter(thread => thread.channelId === currentChannelId);
---

<Layout title={`Discussions - ${currentChannel?.name}`} description={currentChannel?.description}>
    <div class="max-w-7xl mx-auto px-4 py-8 md:py-16">
    <header class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-12">
      <div>
        <h1 class="font-display text-4xl md:text-5xl font-bold text-white">The Lounge</h1>
        <p class="text-lg text-gray-400 mt-2">Discuss the craft of AI content creation.</p>
      </div>
      <a href="/discussions/new" class="inline-flex items-center justify-center h-11 px-6 font-semibold rounded-lg bg-pink-600 text-white hover:bg-pink-500 transition-colors shrink-0">
        Start a Discussion
      </a>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
      
      <aside class="lg:col-span-1">
        <nav class="sticky top-24">
          <h2 class="px-3 text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Channels</h2>
          <ul class="space-y-1">
            <li>
              <a href="/discussions" class="channel-link">
                <span class="text-xl">üåê</span>
                <span class="font-semibold">All Threads</span>
              </a>
            </li>
            {channels.map(channel => (
              <li>
                <a href={`/discussions/${channel.id}`} class:list={["channel-link", { "is-active": channel.id === currentChannelId }]}>
                  <span class="text-xl">{channel.icon}</span>
                  <span class="font-semibold">{channel.name}</span>
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </aside>

      <!-- FIX: Changed the nested <main> tag to a <div> for correct HTML semantics -->
      <div class="lg:col-span-3">
        {filteredThreads.length === 0 ? (
          <div class="text-center py-16 text-gray-500 border border-dashed border-gray-700 rounded-xl">
            <p>No discussions in this channel yet.</p>
            <p class="text-sm mt-2">Why not be the first to start one?</p>
          </div>
        ) : (
          <ul class="space-y-4">
            {filteredThreads.map(thread => (
              <li>
                <a href={`/discussions/thread/${thread.id}`} class="thread-card">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between">
                    <h3 class="font-bold text-lg text-white line-clamp-2 pr-4">{thread.title}</h3>
                    <p class="text-xs text-gray-500 mt-1 sm:mt-0 shrink-0 sm:ml-6">{thread.timestamp}</p>
                  </div>
                  <div class="flex items-center gap-4 mt-3 text-sm">
                    <div class="flex items-center gap-2">
                      <div class="w-6 h-6 rounded-full bg-gray-700 flex items-center justify-center text-sm flex-shrink-0">{thread.author.avatarEmoji}</div>
                      <span class="font-medium text-gray-300 truncate">{thread.author.name}</span>
                    </div>
                    <div class="flex items-center gap-4 text-gray-400">
                      <div class="flex items-center gap-1.5">
                        <svg class="size-4" role="img" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <title>Replies</title>
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                        <span>{thread.replies}</span>
                      </div>
                       <div class="flex items-center gap-1.5">
                        <svg class="size-4" role="img" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <title>Likes</title>
                            <path d="M12 20.999l-8.24-7.545A5.5 5.5 0 0 1 7.76 2.455a5.5 5.5 0 0 1 8.48 0A5.5 5.5 0 0 1 20.24 13.455L12 20.999z"/>
                        </svg>
                        <span>{thread.likes}</span>
                      </div>
                    </div>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        )}
      </div>
    </div>
  </div>
</Layout>

<style>
  .font-display { font-family: 'Playfair Display', serif; }

  .channel-link {
    @apply flex items-center gap-3 px-3 py-2 rounded-lg text-gray-300 transition-colors;
  }
  .channel-link:hover {
    @apply bg-gray-800/50 text-white;
  }
  .channel-link.is-active {
    @apply bg-pink-600/20 text-pink-400;
  }
    .channel-link.is-active:hover {
    @apply bg-pink-600/30 text-pink-300;
  }

  .thread-card {
    @apply block p-5 rounded-xl border border-gray-800 bg-gray-900/50 transition-all duration-200;
  }
  .thread-card:hover {
    @apply border-pink-500/30 bg-gray-800/50;
  }
</style>
