  { id: 2, title: 'Is Suno AI the Future of Music?', creator: '@Synthwave_Sound', duration: '08:15', categorySlug: 'reviews', categoryLabel: 'Reviews', emoji: 'ðŸŽµ' },
  { id: 3, title: 'Testing OpenAI\'s Sora: Hype vs. Reality', creator: '@VideoMage_99', duration: '15:30', categorySlug: 'reviews', categoryLabel: 'Reviews', emoji: 'ðŸŽ¬' },
  
