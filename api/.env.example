# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string
# Local development:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/meatmachine_dev"

# For Neon (recommended for branching workflow):
# DATABASE_URL="postgresql://user:pass@ep-cool-name-123.us-east-2.aws.neon.tech/meatmachine?sslmode=require"
# DIRECT_URL="postgresql://user:pass@ep-cool-name-123.us-east-2.aws.neon.tech/meatmachine?sslmode=require"

# For PlanetScale:
# DATABASE_URL="mysql://user:pass@aws.connect.psdb.cloud/meatmachine?sslaccept=strict"

# Direct URL for migrations (bypasses connection pooling)
DIRECT_URL=""

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret for signing tokens (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT expiration
JWT_EXPIRES_IN="7d"

# Refresh token expiration
REFRESH_TOKEN_EXPIRES_IN="30d"

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================

GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/callback/google"

GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GITHUB_CALLBACK_URL="http://localhost:3000/api/auth/callback/github"

# =============================================================================
# FILE STORAGE (S3-compatible)
# =============================================================================

# AWS S3
# S3_BUCKET="meat-machine-uploads"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY_ID=""
# S3_SECRET_ACCESS_KEY=""

# Cloudflare R2 (recommended - no egress fees)
# R2_ACCOUNT_ID=""
# R2_ACCESS_KEY_ID=""
# R2_SECRET_ACCESS_KEY=""
# R2_BUCKET="meat-machine-uploads"
# R2_PUBLIC_URL="https://uploads.meatmachine.com"

# =============================================================================
# SERVER
# =============================================================================

PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:4321"

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Redis (for caching, sessions, rate limiting)
# REDIS_URL="redis://localhost:6379"

# Sentry (error tracking)
# SENTRY_DSN=""
