---
import AppLayout from '../react/ui/AppLayout.jsx';
// ... other imports

// Destructure the new props from Astro.props and provide fallbacks
const { 
  title, 
  description = "Your default site description goes here.", // Fallback description
  shareImage = "/images/social/default-share-image.jpg"    // Fallback image
} = Astro.props;

const pathname = Astro.url.pathname;
const absoluteShareImageUrl = new URL(shareImage, Astro.url.origin).href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Meat-Machine</title>
    
    <meta name="description" content={description} />

    <meta property="og:title" content={`${title} | Meat-Machine`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteShareImageUrl} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Meat-Machine`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteShareImageUrl} />

    </head>
  <body>
    <AppLayout client:load pathname={pathname}>
      <slot />
    </AppLayout>
  </body>
</html>